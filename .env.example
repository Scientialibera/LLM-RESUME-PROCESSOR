# ============================================
# Resume Processor - Environment Configuration
# ============================================

# Azure OpenAI Configuration
# ---------------------------
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_TEMPERATURE=0.5
AZURE_OPENAI_MAX_TOKENS=4000

# Cosmos DB Configuration
# ------------------------
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_DATABASE_NAME=resume-processor
COSMOS_DB_RAW_RESUMES_CONTAINER=raw-resumes
COSMOS_DB_PROCESSED_RESUMES_CONTAINER=processed-resumes

# Azure Blob Storage Configuration (Optional)
# --------------------------------------------
BLOB_STORAGE_ACCOUNT_URL=https://yourstorageaccount.blob.core.windows.net/
BLOB_STORAGE_CONTAINER_NAME=resumes

# Event Grid Configuration
# -------------------------
# Leave empty if not using Event Grid webhooks
EVENT_GRID_TOPIC_ENDPOINT=
EVENT_GRID_TOPIC_KEY=
EVENT_GRID_WEBHOOK_SECRET=

# Application Configuration
# --------------------------
APP_NAME=Resume Processor API
VERSION=1.0.0
API_PREFIX=/api/v1
LOG_LEVEL=INFO

# CORS Configuration
# ------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Authentication Configuration (Optional)
# ----------------------------------------
# Note: The application uses Azure Managed Identity by default
# Set these only if you need to use different authentication methods
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
# AZURE_TENANT_ID=
